<%- include("./partials/header.ejs") -%>

<div class="container-sm">
    <h1>Welcome to <strong>Daily Scribe</strong></h1>
    <p>Where words flow freely, identities stay <strong>hidden</strong>!</p>
    
    <a href="/compose"><button class="btn btn-outline-dark homeBtn" >CREATE POST</button></a>
    <a href="/newsletter"><button class="btn btn-outline-dark" >NEWSLETTER</button></a>
    

  </div>
<div class="container">
<% allPost.forEach((post)=>{ %>
<div class="content">
    <h2><%= post.title%></h2>
    <p><em><%=post.date%></em></p>
    <p><%= post.post.substring(0,300) + "...." %><a href="/posts/<%=post.id%>"><strong>Read more</strong></a></p> 
</div>    
<%  }); %>
</div>

