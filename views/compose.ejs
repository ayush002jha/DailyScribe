<%- include("./partials/header.ejs") -%>
  <div class="container-sm" style="text-align: left !important;">
    <h1 class="writeHeading">Write with freedom, share without fear!</h1>
    <form action="/compose" method="post">

      <div class="mb-3">
        <label class="form-label">Title:</label>
        <input type="text" class="form-control" name="title"  placeholder="Enter the post title here!" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Date:</label>
        <input type="text" class="form-control" name="date" value="<%=DAY%>" readonly="true">
      </div>
      <div class="mb-3">
        <label class="form-label">Post</label>
        <textarea name="post" class="form-control" rows="10"
          placeholder="Enter you brand new exciting post here!" required></textarea>
      </div>
      <button type="submit" class="btn btn-outline-dark writeButton"> Publish</button>
    </form>
  </div>
  <%- include("./partials/footer") -%>