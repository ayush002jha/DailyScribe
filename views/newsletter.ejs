<%- include("./partials/header.ejs") -%>
    <div class="container-sm ">
        <main class="form-signin w-100 m-auto">
            <form method="post" action="/newsletter">
                <img class="mb-4" src="images/email.png" alt="" >
                <h1 class="h3 mb-3 fw-normal" >Subscribe <br>To <br> Newsletter</h1>
            
                <div class="form-floating">
                <input type="text" class="form-control" id="top"  name="fName"  required >
                <label for="top">First Name</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control " id="middle"  name="lName"  required >
                    <label for="middle">Last Name</label>
                </div>
                <div class="form-floating mb-3">
                <input type="email" class="form-control" id="bottom" name="email"  required  >
                <label for="bottom">Email Address</label>
                </div>
            
            
                <button class="btn btn-outline-dark w-100 py-2" type="submit">SUBSCRIBE</button>
                <p class="mt-5 mb-3 text-body-secondary">&copy; Ayush Jha</p>
            </form>
          </main>
    </div>
    <%- include("./partials/footer") -%>